<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activite.listeGroupeActivity">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroud_parchemin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/liste_groupe"
                android:layout_width="match_parent"
                android:layout_height="520dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <Button
                android:id="@+id/bt_retour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fui_idp_button_background_email"
                android:onClick="onClickRetour"
                android:text="@string/bt_retour"
                android:textColor="@color/browser_actions_bg_grey" />

            <Button
                android:id="@+id/bt_createGroupe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fui_idp_button_background_email"
                android:onClick="onClickCreerGroupe"
                android:text="@string/bt_createGroup"
                android:textColor="@color/browser_actions_bg_grey" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>