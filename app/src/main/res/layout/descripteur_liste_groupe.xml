<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nomGroupe"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="TextView de gauche"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_nbPerso"
            app:layout_constraintEnd_toEndOf="@+id/tv_nbPerso"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_nbPerso"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="TextView de droite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_rejoindre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickRejoindre"
            android:text="Rejoindre" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>